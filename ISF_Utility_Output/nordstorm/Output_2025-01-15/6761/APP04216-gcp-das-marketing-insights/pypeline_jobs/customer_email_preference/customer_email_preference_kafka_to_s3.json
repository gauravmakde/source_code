{
    "dag_id": "customer_email_preference_kafka_to_s3",
    "dag_schedule": "00 12 * * *",
    "dag_sla_minutes": "180",
    "prod_email_on_failure": "nap-marketing@nordstrom.pagerduty.com",
    "nonprod_email_on_failure": "oleksii.huts@nordstrom.com",
    "stages": [
        "load_customer_preference_object_model",
        "load_customer_tokenized_object_model",
        "extracted_and_audit_files_copy"
    ],
    "stage_dependencies": {
        "load_customer_preference_object_model": [
            "extracted_and_audit_files_copy"
        ],
        "load_customer_tokenized_object_model": [
            "extracted_and_audit_files_copy"
        ],
        "extracted_and_audit_files_copy": [
            "save_status_of_the_dag"
        ]
    },
    "load_customer_preference_object_model": {
        "kafka_to_s3": {
            "spark_engine": {
                "spark_run_mode": "low",
                "scripts": [
                    "customer_preference_kafka_to_s3.sql"
                ],
                "input_details": [
                    {
                        "conn_name": "KAFKA_DAS_SINK",
                        "sql_table_reference": "kafka_source",
                        "data_source_name": "cpp_object_model_avro"
                    }
                ],
                "output_details": [
                    {
                        "conn_name": "__S3_CUSTOMER_PREFERENCE_DATA_CSV_SINK__",
                        "sql_table_reference": "customer_preference_data_extract"
                    },
                    {
                        "conn_name": "__S3_CUSTOMER_PREFERENCE_AUDIT_CSV_SINK__",
                        "sql_table_reference": "customer_preference_final_count"
                    }
                ]
            }
        }
    },
    "load_customer_tokenized_object_model": {
        "kafka_to_s3": {
            "spark_engine": {
                "spark_run_mode": "low",
                "scripts": [
                    "customer_tokenized_kafka_to_s3.sql"
                ],
                "input_details": [
                    {
                        "conn_name": "KAFKA_DAS_SINK",
                        "sql_table_reference": "kafka_source",
                        "data_source_name": "customer-object-model-avro"
                    }
                ],
                "output_details": [
                    {
                        "conn_name": "__S3_CUSTOMER_TOKENIZED_DATA_CSV_SINK__",
                        "sql_table_reference": "customer_tokenized_data_extract"
                    },
                    {
                        "conn_name": "__S3_CUSTOMER_TOKENIZED_AUDIT_CSV_SINK__",
                        "sql_table_reference": "customer_tokenized_final_count"
                    }
                ]
            }
        }
    },
    "extracted_and_audit_files_copy": {
        "to_s3_path_folder": {
            "python_executor": {
                "module": "python/utils",
                "version": "1.3.18",
                "args": [
                    "python/utils/src/bulk_s3_copy.py",
                    "--s3_source_bucket_env_name",
                    "S3_MKTG_BUCKET",
                    "--s3_target_bucket_env_name",
                    "S3_MKTG_BUCKET",
                    "--source_to_target_path_pair",
                    "{'source': 'isf/data/customer_preference/customer_preference_data_extract/', 'target': 'isf/data/customer_preference/incremental/year=<year>/month=<month>/day=<day>/hour=<hour>/'}",
                    "--source_to_target_path_pair",
                    "{'source': 'isf/data/customer_email/customer_tokenized_data_extract/', 'target': 'isf/data/customer_email/incremental/year=<year>/month=<month>/day=<day>/hour=<hour>/'}",
                    "--source_to_target_path_pair",
                    "{'source': 'isf/audit/customer_preference/customer_preference_final_count/', 'target': 'isf/audit/customer_preference/incremental/year=<year>/month=<month>/day=<day>/hour=<hour>/'}",
                    "--source_to_target_path_pair",
                    "{'source': 'isf/audit/customer_email/customer_tokenized_final_count/', 'target': 'isf/audit/customer_email/incremental/year=<year>/month=<month>/day=<day>/hour=<hour>/'}",
                    "--base_date_iso_env_name",
                    "DAG_EXECUTION_DATE"
                ]
            },
            "macros": {
                "DAG_EXECUTION_DATE": "execution_date"
            }
        }
    }
}