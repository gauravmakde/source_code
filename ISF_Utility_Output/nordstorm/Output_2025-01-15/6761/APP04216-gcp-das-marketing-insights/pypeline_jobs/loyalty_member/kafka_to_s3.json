{
    "dag_id": "loyalty_member_kafka_to_s3",
    "dag_schedule": "00 22 * * *",
    "dag_sla_minutes": "180",
    "prod_email_on_failure": "nap-marketing@nordstrom.pagerduty.com",
    "nonprod_email_on_failure": "andrii.besarab@nordstrom.com",
    "stages": [
        "load_loyaltymember_object_model",
        "extracted_and_audit_files_copy"
    ],
    "stage_dependencies": {
        "load_loyaltymember_object_model": [
            "extracted_and_audit_files_copy"
        ],
        "extracted_and_audit_files_copy": [
            "save_status_of_the_dag"
        ]
    },
    "load_loyaltymember_object_model": {
        "kafka_to_s3": {
            "spark_engine": {
                "spark_run_mode": "low",
                "scripts": [
                    "loyalty_member_kafka_to_s3.sql"
                ],
                "input_details": [
                    {
                        "conn_name": "KAFKA_DAS_SINK",
                        "sql_table_reference": "kafka_source",
                        "data_source_name": "loyaltymember_object_model_avro"
                    }
                ],
                "output_details": [
                    {
                        "conn_name": "__S3_LOYALTY_MEMBER_DATA_CSV_SINK__",
                        "sql_table_reference": "loyalty_member_data_extract"
                    },
                    {
                        "conn_name": "__S3_LOYALTY_MEMBER_AUDIT_CSV_SINK__",
                        "sql_table_reference": "loyalty_member_final_count"
                    }
                ]
            }
        }
    },
    "extracted_and_audit_files_copy": {
        "to_s3_path_folder": {
            "python_executor": {
                "module": "python/utils",
                "version": "1.3.18",
                "args": [
                    "python/utils/src/bulk_s3_copy.py",
                    "--s3_source_bucket_env_name",
                    "S3_MKTG_BUCKET",
                    "--s3_target_bucket_env_name",
                    "S3_MKTG_BUCKET",
                    "--source_to_target_path_pair",
                    "{'source': 'isf/data/loyalty_member/loyalty_member_data_extract/', 'target': 'isf/data/loyalty_member/incremental/year=<year>/month=<month>/day=<day>/hour=<hour>/'}",
                    "--source_to_target_path_pair",
                    "{'source': 'isf/audit/loyalty_member/loyalty_member_final_count/', 'target': 'isf/audit/loyalty_member/incremental/year=<year>/month=<month>/day=<day>/hour=<hour>/'}",
                    "--base_date_iso_env_name",
                    "DAG_EXECUTION_DATE"
                ]
            },
            "macros": {
                "DAG_EXECUTION_DATE": "execution_date"
            }
        }
    }
}