{
    "dag_id": "trust_emp_employee_purchase_audit_look_up",
    "prod_email_on_failure": "t2app02602-npr-credit-refund-request-email.i4sd81av@nordstrom.pagerduty.com",
    "nonprod_email_on_failure": "deboleena.ganguly@nordstrom.com",
    "sql_env_vars": {
        "start_date": "current_date()-3",
        "end_date": "current_date()"
    },
    "stages": [
        "load_to_csv",
        "ldg_to_t2",
        "tpt_load_ldg"
    ],
    "stage_dependencies": {
        "load_to_csv": "tpt_load_ldg",
        "tpt_load_ldg": "ldg_to_t2"
    },
    "load_to_csv": {
        "job_1_load_data_to_csv": {
            "spark_engine": {
                "spark_run_mode": "medium",
                "retries": "0",
                "pause_idle_cluster_termination": "before_app",
                "scripts": [
                    "employee_purchase_audit/trust_emp_employee_purchase_audit_look_up_load.sql"
                ],
                "input_details": [],
                "output_details": [
                    {
                        "conn_name": "TPT_CSV_OUTPUT",
                        "sql_table_reference": "employee_purchase_audit_look_up_ldg_output"
                    }
                ]
            }
        }
    },
    "tpt_load_ldg": {
        "job_2_load_data_to_t2_ldg": {
            "tpt_engine": {
                "input_details": [
                    {
                        "conn_name": "TPT_TRU",
                        "delimiter": "1F",
                        "table_name": "employee_purchase_audit_look_up_ldg",
                        "s3_file_path": "s3://{tpt_path}/employee_purchase_audit_look_up_ldg_output/*.csv.gz",
                        "job_name": "employee_purchase_audit_look_up_ldg"
                    }
                ],
                "output_details": []
            }
        }
    },
    "ldg_to_t2": {
        "job_3_update_t2_tables_from_landing_table": {
            "teradata_engine": {
                "input_details": [
                    {
                        "conn_name": "TERADATA_SOURCE_TRU",
                        "scripts": [
                            "employee_purchase_audit/trust_emp_employee_purchase_audit_look_up.sql"
                        ]
                    }
                ]
            }
        }
    }
}