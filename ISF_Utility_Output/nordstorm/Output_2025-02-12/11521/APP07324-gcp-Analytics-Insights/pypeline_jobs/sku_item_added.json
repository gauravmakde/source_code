{
    "dag_id": "sku_item_added",
    "dag_schedule": "0 14 * * *",
    "prod_email_on_failure": "analytics-insights@nordstrom.pagerduty.com, meghan.hickey@nordstrom.com",
    "nonprod_email_on_failure": "jared.hesse@nordstrom.com",
    "stages": [
        "sku_item_added"
    ],
    "sql_env_vars": {
        "start_date": "current_date()-3",
        "end_date": "current_date()"
    },
    "sku_item_added": {
        "job_1_create_sku_landing_table": {
            "teradata_engine": {
                "input_details": [
                    {
                        "conn_name": "TERADATA_SOURCE_EVT",
                        "scripts": [
                            "sku_item_added/ddl/ddl_sku_item_added_ldg.sql"
                        ]
                    }
                ]
            }
        },
        "job_2_load_data_to_csv": {
            "spark_engine": {
                "spark_run_mode": "medium",
                "retries": "0",
                "pause_idle_cluster_termination": "before_app",
                "scripts": [
                    "sku_item_added/sku_item_added_load.sql"
                ],
                "input_details": [],
                "output_details": [
                    {
                        "conn_name": "TPT_CSV_OUTPUT",
                        "sql_table_reference": "sku_item_added_ldg_output"
                    }
                ]
            }
        },
        "job_3_load_data_to_t2_ldg": {
            "tpt_engine": {
                "retries": "0",
                "input_details": [
                    {
                        "conn_name": "TPT_EVT",
                        "delimiter": "1F",
                        "table_name": "sku_item_added_ldg",
                        "s3_file_path": "s3://{tpt_path}/sku_item_added_ldg_output/*.csv.gz",
                        "job_name": "sku_item_added_ldg"
                    }
                ],
                "output_details": []
            }
        },
        "job_4_update_sku_from_ldg_table": {
            "teradata_engine": {
                "input_details": [
                    {
                        "conn_name": "TERADATA_SOURCE_EVT",
                        "scripts": [
                            "sku_item_added/sku_item_added.sql"
                        ]
                    }
                ]
            }
        }
    }
}