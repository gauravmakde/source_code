{
    "dag_id": "nmn_head_brands",
    "dag_schedule": "0 3 5 * *",
    "prod_email_on_failure": "anandkumar.patel@nordstrom.com",
    "nonprod_email_on_failure": "aditya.trivedi@nordstrom.com",
    "sql_env_vars": {
        "start_date": "current_date()",
        "end_date": "current_date()"
    },
    "stages": [
        "load_to_csv",
        "ldg_to_t2",
        "tpt_load_ldg"
    ],
    "stage_dependencies": {
        "load_to_csv": "tpt_load_ldg",
        "tpt_load_ldg": "ldg_to_t2"
    },
    "load_to_csv": {
        "job_1_load_data_to_csv": {
            "spark_engine": {
                "spark_run_mode": "medium",
                "pause_idle_cluster_termination": "before_app",
                "scripts": [
                    "nmn/nmn_brand_customer_metrics/nmn_head_brands_load.sql"
                ],
                "input_details": [],
                "output_details": [
                    {
                        "conn_name": "TPT_CSV_OUTPUT",
                        "sql_table_reference": "nmn_head_brands_ldg_output"
                    }
                ]
            }
        }
    },
    "tpt_load_ldg": {
        "job_2_load_data_to_t2_ldg": {
            "tpt_engine": {
                "retries": "0",
                "input_details": [
                    {
                        "conn_name": "TPT_NMN",
                        "delimiter": "1F",
                        "table_name": "nmn_head_brands_ldg",
                        "s3_file_path": "s3://{tpt_path}/nmn_head_brands_ldg_output/*.csv.gz",
                        "job_name": "nmn_head_brands_ldg"
                    }
                ],
                "output_details": []
            }
        }
    },
    "ldg_to_t2": {
        "job_3_update_t2_tables_from_landing_table": {
            "teradata_engine": {
                "input_details": [
                    {
                        "conn_name": "TERADATA_SOURCE_NMN",
                        "scripts": [
                            "nmn/nmn_brand_customer_metrics/nmn_head_brands.sql"
                        ]
                    }
                ]
            }
        }
    }
}